@charset 'utf-8';
/* 
顶部样式 */

.yhd-container .yhd-header{/* overflow:hidden; */ }
.yhd-container .yhd-header .banner{height:30px;background-color:#F4F4F4;border-top:1px solid #DBDBDB;border-bottom:1px solid #DBDBDB;}
.yhd-container .yhd-header .banner .centerbar{width:1228px;margin:auto;}
.yhd-container .yhd-header .banner .centerbar li{
			position:relative;
			padding:8px 9px;
			height:14px;
			line-height:14px;
		 border-left:1px solid transparent;border-right:1px solid transparent;
			}

/* 二级菜单样式 */
.yhd-container .yhd-header .banner .centerbar .subbanner{
			display:none;
			position:absolute;
			z-index:1;
			top:30px;right:-1px;
			width:82px;
			background:#fff;
			padding-bottom:10px;
			border:1px solid #DBDBDB;
			border-top:2px solid #fff;
}

.yhd-container .yhd-header .banner .centerbar li .subbanner a{display:block;padding:10px 0px 3px 9px;}
.yhd-container .yhd-header .banner .centerbar li a:hover{color:#FF4040;}
.yhd-container .yhd-header .banner .centerbar .service:hover{background:#fff;border-left:1px solid #DBDBDB;
border-right:1px solid #DBDBDB;}
.yhd-container .yhd-header .banner .centerbar .service i{display:inline-block; transition:0.3s;}
.yhd-container .yhd-header .banner .centerbar .service:hover i{transform:rotate(180deg);}

.yhd-container .yhd-header .banner .centerbar li:hover .subbanner{display:block;}

/* 搜索盒子样式设计 */
.yhd-header .search-box{overflow:hidden;height:150px;background-color:#fff;}
.search-box .search-center{height:100%;width:1228px;margin:auto;}
.search-box .search-center .searchlogo{height:100%;width:205px;background:url(../images/00-header/1.png)no-repeat center/cover;}
.search-box .search-center .searchcontent{width:757px;height:110px;padding:30px 8px 10px 35px;}
.search-box .search-center .searchcontent li input{float:left;width:700px;height:37px;border:1px solid #ff4040;}
.search-box .search-center .searchcontent li button{float:left;width:50px;height:39px;background:#ff4040;border:1px solid #ff4040;
text-align:center;}
.search-box .search-center .searchcontent .smalloption{padding:10px 0px 18px 0px;word-spacing:15px;color:#ccc;}
.search-box .search-center .searchcontent .maxoption{word-spacing:25px;}
.search-box .search-center .searchcontent a:hover{color:#ff4040;}
.search-box .search-center .shoppingcar{width:223px;height:100%;padding-top:30px;}
.search-box .search-center .shoppingcar span{float:right;width:130px;height:37px;border:1px solid #ccc;text-align:center;line-height:37px;word-spacing:25px;}

/* 尾部样式设计 */
.yhd-footer{height:450px;background:#fff;}
.footer-top{display:table;height:127px;border-bottom:1px solid #ddd;}
.footer-top li{display:table-cell;}
.footer-top .foot-toptag{ width:307px;}
.foot-toptag img{float:left;width:66px;height:66px;padding:30px 15px 30px 50px;vertical-align:middle;}
.foot-toptag h2{vertical-align:middle; padding-top:40px;font-size:16px; }
.foot-toptag h3{color:#ccc;}
/* 
尾部中间样式设计 */
.footer-middle{padding-left:20px;padding-top:20px;height:172px;}
.footer-middle li{float:left;width:195px;}
.footer-middle li.footer-erweima{width:280px;}
.footer-middle li div:first-of-type{margin-right:50px;}
.footer-middle li h3{font-weight:bold;height:32px;line-height:32px;}
.footer-middle li a{display:block;line-height:25px;}
.footer-middle li a:hover{color:#ff4040;}
/* 尾部最底部设计 */
.footer-end{padding-top:20px;text-align:center;}
.footer-end li:nth-child(1) a{display:inline-block;padding:0px 10px;}
.footer-end li:nth-child(1) a + a{border-left:1px solid #aaa;}
.footer-end li:nth-child(2) p{line-height:35px;}
.footer-end li:nth-child(3){padding:20px 0px;}
.footer-end li img{width:90px;height:30px;margin-right:10px;}